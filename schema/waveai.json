{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$defs": {
    "AIModeConfigType": {
      "properties": {
        "display:name": {
          "type": "string"
        },
        "display:order": {
          "type": "number"
        },
        "display:icon": {
          "type": "string"
        },
        "display:description": {
          "type": "string"
        },
        "ai:provider": {
          "type": "string",
          "enum": [
            "wave",
            "google",
            "openrouter",
            "nanogpt",
            "openai",
            "azure",
            "azure-legacy",
            "custom"
          ]
        },
        "ai:apitype": {
          "type": "string",
          "enum": [
            "google-gemini",
            "openai-responses",
            "openai-chat"
          ]
        },
        "ai:model": {
          "type": "string"
        },
        "ai:thinkinglevel": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high"
          ]
        },
        "ai:endpoint": {
          "type": "string"
        },
        "ai:azureapiversion": {
          "type": "string"
        },
        "ai:apitoken": {
          "type": "string"
        },
        "ai:apitokensecretname": {
          "type": "string"
        },
        "ai:azureresourcename": {
          "type": "string"
        },
        "ai:azuredeployment": {
          "type": "string"
        },
        "ai:capabilities": {
          "items": {
            "type": "string",
            "enum": [
              "pdfs",
              "images",
              "tools"
            ]
          },
          "type": "array"
        },
        "ai:switchcompat": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "waveai:cloud": {
          "type": "boolean"
        },
        "waveai:premium": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "display:name"
      ]
    }
  },
  "additionalProperties": {
    "$ref": "#/$defs/AIModeConfigType"
  },
  "type": "object"
}